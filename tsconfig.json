{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "build"
  },
  "include": [
    "src/**/*.ts" 
  ],
  "exclude": ["node_modules", "build/**/*"]
}